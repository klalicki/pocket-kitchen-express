    <div class="app-container">
        <div id="top-bar">
            <button id="back-button">
                <img src="img/hamburger-btn-black.png" class="img-stretch" alt="">
            </button>
            <h2 id="top-bar-title"><%= recipeData.meta.title %></h2>
            <button id="fullscreen-corner-btn">
                <img src="img/fullscreen-btn.png" class="img-stretch" alt="">
            </button>
        </div>
        <div class="main-section">
            <div class="persistent-timer-container">
                <div class="persistent-timer-row">
                    <img src="img/timer-icon.png" alt="" class="persistent-timer-icon">
                    <h4 class="persistent-timer"></h4>
                </div>
                <div class="persistent-timer-drawer">
                    <!-- <button class="persistent-timer-button persistent-timer-pause">PAUSE</button>
                    <button class="persistent-timer-button persistent-timer-reset">RESET</button> -->
                </div>

            </div>


            <div class="recipe-swiper">
                <!-- Additional required wrapper -->
                <div class="swiper-wrapper">
                  <!-- Slides -->
                  <div class="swiper-slide">Slide 1</div>
                  <div class="swiper-slide">Slide 2</div>
                  <div class="swiper-slide">Slide 3</div>
                  ...
                </div>
                <!-- If we need pagination -->
                <div class="swiper-pagination"></div>
              
                <!-- If we need navigation buttons -->
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
              
                <!-- If we need scrollbar -->
                <div class="swiper-scrollbar"></div>
              </div>
           
        </div>
        <div id="bottom-bar">
            <div class="progress-container">
                <div id="progress-bar">

                </div>
                <div id="progress-arrow">
                    <img src="img/progress-arrow.png" alt="">
                </div>
            </div>
            <div id="bottom-bar-flex">
                <h2 class="bottom-bar-text">
                    <span id="curContainer"></span> /
                    <span id="totalContainer"></span>
                </h2>
                <h2 class="bottom-bar-text">

                </h2>
            </div>
        </div>


    </div>
    <div id="menu-panel">
        <button id="btn-close-menu">
            <img src="img/close-button.png" class="img-stretch" alt="">
        </button>
        <ul class="menu-list">

        </ul>
